<!-- Page Content -->
            <div class="container">
                <table id="example" class="table table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>Account ID</th>
                            <th>Full name</th>
                            <th>Phone</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                         {{#each users}}
                        <tr>
                            <td>{{this._id}}</td>
                            <td>{{this.userName}}</td>
                            <td>{{this.phoneNumber}}</td>
                            <td>
                              <button onclick="location.href = '/userAccounts/detail?_id={{this._id}}';" class="btn btn-default btn-xs"><span class="bi bi-eye-fill"><a href="#"></a></span></button>
                              {{#if this.isBanned}}
                                <form action="/userAccounts/unblock" method="post" style="display: inline-block;">   
                                  <button type="submit" name="_id" value="{{this._id}}" class="btn btn-default btn-xs"><span class="bi bi-unlock-fill"></span></button>
                                </form>
                              {{else}}
                                <form action="/userAccounts/block" method="post" style="display: inline-block;">   
                                  <button type="submit" name="_id" value="{{this._id}}" class="btn btn-default btn-xs"><span class="bi bi-lock-fill"></span></button>
                                </form>
                              {{/if}}
                             </td>
                        </tr>
                        {{/each}}                                                                
                    </tbody>
                </table>
                <!-- Pagination -->
                    <ul class="pagination">
                      {{#if hasPrev}}
                          <li class="page-item"><a class="page-link" href="/userAccounts{{subRoute}}/{{prevAndNext.prev}}">Previous</a></li>
                      {{else}}
                          <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                      {{/if}}
                      {{#if hasPrev}}
                        <li class="page-item"><a class="page-link" href="/userAccounts{{subRoute}}/{{prevAndNextInPages.prev}}">...</a></li>
                      {{/if}}
                      {{#each page}}
                        <li class="page-item"><a class="page-link" href="/userAccounts{{subRoute}}/{{this.page}}">{{this.page}}</a></li>
                      {{/each}}
                      {{#if hasNext}}
                        <li class="page-item"><a class="page-link" href="/userAccounts{{subRoute}}/{{prevAndNextInPages.next}}">...</a></li>
                      {{/if}}
                      {{#if hasNext}}
                        <li class="page-item"><a class="page-link" href="/userAccounts{{subRoute}}/{{prevAndNext.prev}}">Next</a></li>
                      {{else}}
                        <li class="page-item disabled"><a class="page-link" href="#">Next</a></li>
                      {{/if}}                    
                    </ul>
            </div>  
            <!-- End of page content -->