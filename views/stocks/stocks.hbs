<!-- Page Content -->
            <div class="container">
              <div class="card">
                  <div class="card-body">
                      <h5 class="card-title">Danh sách vaccine</h5>
                      <!-- Search bar -->
                        <nav class="navbar navbar-light bg-light">
                            <div class="container-fluid" >
                              <form class="d-flex" action="/stocks/search" method="get">
                                <input class="form-control me-2" type="search" name= "name" placeholder="Tên vaccine" aria-label="Search">
                                <button class="btn btn-outline-primary" type="submit">Search</button>
                              </form>
                            </div>
                        </nav>
            
                        <!--  -->
                      <table id="example" class="table table-striped" style="width:100%">
                          <thead>
                              <tr>
                                  <th>Tên vaccine</th>
                                  <th>Category</th>
                                  <th>Price</th>
                                  <th>Status</th>
                                  <th>Update</th>
                              </tr>
                          </thead>
                          <tbody>
                              {{#each products}}
                              <tr>
                                  <td>{{this._id}}</td>
                                  <td>{{this.name}}</td>
                                  <td>{{this.category}}</td>
                                  <td>{{this.price}}</td>
                                  <td>{{this.status}}</td>
                                  <td>
                                    <form action="/stocks/detail" method="get" style="display: inline-block;">
                                      <button type="submit" name="_id" value="{{this._id}}" class="btn btn-default btn-xs" ><span class="bi bi-pencil-square"></span></button>
                                    </form>
                                    <form action="/stocks/delete" method="post" style="display: inline-block;">
                                      <button type="submit" name="_id" value="{{this._id}}" class="btn btn-default btn-xs" ><span class="bi bi-trash-fill"></span></button>
                                    </form>
                                  </td>
                              </tr>
                              {{/each}}
                                                                                          
                          </tbody>
                      </table>
                  </div>
              </div>
                 <!-- Pagination -->
                    <ul class="pagination">
                      {{#if hasPrev}}
                          <li class="page-item"><a class="page-link" href="/stocks{{subRoute}}/{{prevAndNext.prev}}">Previous</a></li>
                      {{else}}
                          <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                      {{/if}}
                      {{#if hasPrev}}
                        <li class="page-item"><a class="page-link" href="/stocks{{subRoute}}/{{prevAndNextInPages.prev}}">...</a></li>
                      {{/if}}
                      {{#each page}}
                        <li class="page-item"><a class="page-link" href="/stocks{{subRoute}}/{{this.page}}">{{this.page}}</a></li>
                      {{/each}}
                      {{#if hasNext}}
                        <li class="page-item"><a class="page-link" href="/stocks{{subRoute}}/{{prevAndNextInPages.next}}">...</a></li>
                      {{/if}}
                      {{#if hasNext}}
                        <li class="page-item"><a class="page-link" href="/stocks{{subRoute}}/{{prevAndNext.prev}}">Next</a></li>
                      {{else}}
                        <li class="page-item disabled"><a class="page-link" href="#">Next</a></li>
                      {{/if}}                    
                    </ul>
                <!-- Modal (Order vaccine) -->
                <button id="add-product-btn" type="button" class="btn" data-toggle="modal" data-target="#addProductModal">Add new product</button>
                <div class="modal fade" id="addProductModal" tabindex="-1" role="dialog" aria-labelledby="addProductModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="addProductModalLabel">Adding new product</h5>
                        </div>
                        <div class="modal-body">
                            <form action="/stocks/add" method="POST" enctype="multipart/form-data">
                                <div class="row">
                                  <div class="form-group col-md-12">
                                    <label for="productImg" >Select an image</label>
                                    <input type="file" class="form-control" id="productImg" name="img" accept="image/*" required>
                                  </div>
                                  <div class="form-group col-md-6">
                                    <label for="productName">Name</label>
                                    <input type="text" class="form-control" id="productName" name="name" placeholder="Name" required>
                                  </div>
                                  <div class="form-group col-md-6">
                                    <label for="productCategory">Category</label>
                                    <input type="text" class="form-control" id="productCategory" name="category" placeholder="Category" required>
                                  </div>
                                  <div class="form-group col-md-6">
                                    <label for="productPrice">Price</label>
                                    <input type="number" step="0.01" class="form-control" id="productPrice" name ="price" placeholder="Price" required> 
                                  </div>
                                  <div class="form-group col-md-6">
                                    <label for="productDiscount">Discount</label>
                                    <input type="number" step="0.01" class="form-control" id="productDiscount" name="discount" placeholder="Discount" required>
                                  </div>
                                </div>                                                       
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                  <button type="submit" class="btn btn-primary">Add</button>
                                </div>
                            </form>
                        </div>
                      </div>
                    </div>
                </div>
                <!-- End of Modal  -->
                
            </div>  
            <!-- End of page content -->